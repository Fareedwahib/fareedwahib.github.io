<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">Hello, I'm <%= name %></h1>
                <h2 class="h3 mb-4 text-light"><%= title %></h2>
                <p class="lead mb-4"><%= bio %></p>
                <div class="d-flex gap-3">
                    <a href="/projects" class="btn btn-light btn-lg">View My Work</a>
                    <a href="/contact" class="btn btn-outline-light btn-lg">Get In Touch</a>
                </div>
            </div>
            <div class="col-lg-4 text-center">
                <div class="profile-placeholder bg-light rounded-circle mx-auto" style="width: 300px; height: 300px; display: flex; align-items: center; justify-content: center;">
                    <i class="fas fa-user text-primary" style="font-size: 120px;"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Skills Section -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Technical Skills</h2>
        <div class="row">
            <% skills.forEach(skill => { %>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card h-100 text-center border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title"><%= skill.name %></h5>
                            <div class="progress mb-2">
                                <!-- <div class="progress-bar bg-primary" style="width: <%= skill.level %>%"></div> -->
                            </div>
                            <small class="text-muted"><%= skill.level %>%</small>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<!-- Experience Section -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Professional Experience</h2>
        <div class="row">
            <% experience.forEach((exp, index) => { %>
                <div class="col-lg-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0"><%= exp.position %></h5>
                                <span class="badge bg-primary"><%= exp.year %></span>
                            </div>
                            <p class="card-text"><%= exp.description %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<!-- Recent Projects Preview -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center mb-5">
            <div class="col">
                <h2 class="mb-0">Featured Projects</h2>
            </div>
            <div class="col-auto">
                <a href="/projects" class="btn btn-outline-primary">View All Projects</a>
            </div>
        </div>
        <div class="row">
            <% projects.slice(0, 3).forEach(project => { %>
                <div class="col-lg-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title"><%= project.name %></h5>
                            <p class="card-text"><%= project.description %></p>
                            <div class="d-flex flex-wrap gap-1 mb-3">
                                <% project.technologies.forEach(tech => { %>
                                    <span class="badge bg-secondary"><%= tech %></span>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<style>
.hero-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.min-vh-100 {
    min-height: calc(100vh - 76px);
}

.card:hover {
    transform: translateY(-5px);
    transition: transform 0.3s ease;
}

.progress {
    height: 8px;
}

.social-links a:hover {
    color: #667eea !important;
}
</style>