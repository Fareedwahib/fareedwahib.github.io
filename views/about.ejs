<!-- About Hero Section -->
<section class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold text-white mb-4">About Me</h1>
                <p class="lead text-light mb-4">
                    I'm a passionate backend developer who loves creating robust, scalable applications 
                    that solve real-world problems. With expertise in modern technologies and a commitment 
                    to clean code, I bring ideas to life through powerful backend solutions.
                </p>
            </div>
            <div class="col-lg-6 text-center">
                <div class="profile-image-placeholder bg-light rounded-circle mx-auto mb-4" 
                     style="width: 200px; height: 200px; display: flex; align-items: center; justify-content: center;">
                    <i class="fas fa-user text-primary" style="font-size: 80px;"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Detailed Bio Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-5">
                        <h2 class="mb-4">My Journey</h2>
                        <p class="lead mb-4">
                            <%= bio %>
                        </p>
                        <p class="mb-4">
                            My journey in backend development started with a curiosity about how applications work 
                            behind the scenes. Over the years, I've developed expertise in various technologies 
                            and frameworks, always focusing on writing clean, maintainable, and efficient code.
                        </p>
                        <p class="mb-4">
                            I believe in continuous learning and staying updated with the latest industry trends. 
                            When I'm not coding, you can find me exploring new technologies, contributing to 
                            open-source projects, or sharing knowledge with the developer community.
                        </p>
                        
                        <div class="row mt-5">
                            <div class="col-md-6">
                                <h4 class="h5 mb-3">What I Do</h4>
                                <ul class="list-unstyled">
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>API Development & Integration</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Database Design & Optimization</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Microservices Architecture</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Cloud Services & DevOps</li>
                                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Performance Optimization</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h4 class="h5 mb-3">Core Values</h4>
                                <ul class="list-unstyled">
                                    <li class="mb-2"><i class="fas fa-heart text-danger me-2"></i>Clean & Maintainable Code</li>
                                    <li class="mb-2"><i class="fas fa-heart text-danger me-2"></i>Continuous Learning</li>
                                    <li class="mb-2"><i class="fas fa-heart text-danger me-2"></i>Problem-Solving Mindset</li>
                                    <li class="mb-2"><i class="fas fa-heart text-danger me-2"></i>Team Collaboration</li>
                                    <li class="mb-2"><i class="fas fa-heart text-danger me-2"></i>User-Centric Approach</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Skills Detailed Section -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Technical Expertise</h2>
        <div class="row">
            <% skills.forEach(skill => { %>
                <div class="col-lg-6 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="mb-0"><%= skill.name %></h5>
                                <span class="badge bg-primary"><%= skill.level %>%</span>
                            </div>
                            <div class="progress mb-2" style="height: 10px;">
                                <div class="progress-bar bg-gradient" 
                                     role="progressbar" 
                                     style="width: <%= skill.level %>%;"
                                     aria-valuenow="<%= skill.level %>" 
                                     aria-valuemin="0" 
                                     aria-valuemax="100">
                                </div>
                            </div>
                            <small class="text-muted">
                                <% if (skill.level >= 90) { %>
                                    Expert level - Can mentor others and lead projects
                                <% } else if (skill.level >= 80) { %>
                                    Advanced level - Can work independently on complex tasks
                                <% } else if (skill.level >= 70) { %>
                                    Intermediate level - Comfortable with most scenarios
                                <% } else { %>
                                    Learning level - Actively improving skills
                                <% } %>
                            </small>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<!-- Experience Timeline -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Professional Experience</h2>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <% experience.forEach((exp, index) => { %>
                    <div class="d-flex mb-4">
                        <div class="flex-shrink-0">
                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center" 
                                 style="width: 40px; height: 40px;">
                                <i class="fas fa-briefcase text-white"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-4">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="mb-0"><%= exp.position %></h5>
                                        <span class="badge bg-outline-primary"><%= exp.year %></span>
                                    </div>
                                    <p class="text-muted mb-0"><%= exp.description %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-5 bg-primary text-white">
    <div class="container text-center">
        <h2 class="mb-4">Let's Work Together</h2>
        <p class="lead mb-4">
            I'm always interested in new opportunities and exciting projects. 
            Let's discuss how we can bring your ideas to life!
        </p>
        <div class="d-flex gap-3 justify-content-center">
            <a href="/contact" class="btn btn-light btn-lg">Get In Touch</a>
            <a href="/projects" class="btn btn-outline-light btn-lg">View My Work</a>
        </div>
    </div>
</section>

<style>
.hero-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.progress-bar {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    transition: width 1.5s ease-in-out;
}

.card:hover {
    transform: translateY(-5px);
    transition: transform 0.3s ease;
}

.timeline-item::before {
    content: '';
    position: absolute;
    left: 20px;
    top: 60px;
    height: 100%;
    width: 2px;
    background: #dee2e6;
}

.timeline-item:last-child::before {
    display: none;
}
</style>