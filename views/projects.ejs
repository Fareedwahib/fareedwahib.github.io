<!-- Projects Hero Section -->
<section class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold text-white mb-4">My Projects</h1>
                <p class="lead text-light mb-4">
                    Here's a showcase of some projects I've worked on. Each project represents 
                    a unique challenge and demonstrates different aspects of my backend development skills.
                </p>
            </div>
            <div class="col-lg-4 text-center">
                <div class="bg-white bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto" 
                     style="width: 150px; height: 150px;">
                    <i class="fas fa-code text-white" style="font-size: 60px;"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Filter Buttons -->
<section class="py-4 bg-light">
    <div class="container">
        <div class="text-center">
            <button class="btn btn-outline-primary me-2 mb-2 filter-btn active" data-filter="all">All Projects</button>
            <button class="btn btn-outline-primary me-2 mb-2 filter-btn" data-filter="nestjs">NestJS</button>
            <button class="btn btn-outline-primary me-2 mb-2 filter-btn" data-filter="api">API Development</button>
            <button class="btn btn-outline-primary me-2 mb-2 filter-btn" data-filter="database">Database</button>
            <button class="btn btn-outline-primary me-2 mb-2 filter-btn" data-filter="realtime">Real-time</button>
        </div>
    </div>
</section>

<!-- Projects Grid -->
<section class="py-5">
    <div class="container">
        <div class="row" id="projects-grid">
            <% if (typeof projects !== 'undefined' && projects.length > 0) { %>
                <% projects.forEach((project, index) => { %>
                    <div class="col-lg-4 col-md-6 mb-4 project-item" 
                         data-categories="<%= project.technologies.map(tech => tech.toLowerCase()).join(' ') %>">
                        <div class="card h-100 border-0 shadow-sm project-card">
                            <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center" 
                                 style="height: 200px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                <i class="fas fa-<%= index === 0 ? 'shopping-cart' : index === 1 ? 'comments' : 'tasks' %> text-white" 
                                   style="font-size: 3rem;"></i>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title mb-3"><%= project.name %></h5>
                                <p class="card-text flex-grow-1"><%= project.description %></p>
                                
                                <!-- Technologies -->
                                <div class="mb-3">
                                    <% project.technologies.forEach(tech => { %>
                                        <span class="badge bg-secondary me-1 mb-1"><%= tech %></span>
                                    <% }); %>
                                </div>
                                
                                <!-- Project Actions -->
                                <div class="d-flex gap-2">
                                    <button class="btn btn-primary btn-sm flex-fill" 
                                            onclick="showProjectDetails('<%= project.name %>', '<%= project.description %>', '<%= project.technologies.join(', ') %>')">
                                        <i class="fas fa-eye me-1"></i>View Details
                                    </button>
                                    <button class="btn btn-outline-primary btn-sm" 
                                            onclick="window.open('#', '_blank')" title="GitHub Repository">
                                        <i class="fab fa-github"></i>
                                    </button>
                                    <button class="btn btn-outline-success btn-sm" 
                                            onclick="window.open('#', '_blank')" title="Live Demo">
                                        <i class="fas fa-external-link-alt"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <!-- Placeholder projects if none are defined -->
                <div class="col-lg-4 col-md-6 mb-4 project-item" data-categories="nestjs api postgresql">
                    <div class="card h-100 border-0 shadow-sm project-card">
                        <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center" 
                             style="height: 200px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <i class="fas fa-shopping-cart text-white" style="font-size: 3rem;"></i>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-3">E-commerce API</h5>
                            <p class="card-text flex-grow-1">
                                A comprehensive e-commerce backend with user authentication, product management, 
                                shopping cart, and payment integration using Stripe.
                            </p>
                            <div class="mb-3">
                                <span class="badge bg-secondary me-1 mb-1">NestJS</span>
                                <span class="badge bg-secondary me-1 mb-1">PostgreSQL</span>
                                <span class="badge bg-secondary me-1 mb-1">Redis</span>
                                <span class="badge bg-secondary me-1 mb-1">Stripe</span>
                            </div>
                            <div class="d-flex gap-2">
                                <button class="btn btn-primary btn-sm flex-fill" 
                                        onclick="showProjectDetails('E-commerce API', 'A comprehensive e-commerce backend with user authentication, product management, shopping cart, and payment integration.', 'NestJS, PostgreSQL, Redis, Stripe')">
                                    <i class="fas fa-eye me-1"></i>View Details
                                </button>
                                <button class="btn btn-outline-primary btn-sm" title="GitHub Repository">
                                    <i class="fab fa-github"></i>
                                </button>
                                <button class="btn btn-outline-success btn-sm" title="Live Demo">
                                    <i class="fas fa-external-link-alt"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6 mb-4 project-item" data-categories="nestjs realtime mongodb websocket">
                    <div class="card h-100 border-0 shadow-sm project-card">
                        <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center" 
                             style="height: 200px; background: linear-gradient(135deg, #28a745 0%, #20c997 100%);">
                            <i class="fas fa-comments text-white" style="font-size: 3rem;"></i>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-3">Real-time Chat System</h5>
                            <p class="card-text flex-grow-1">
                                A scalable real-time messaging system with WebSocket support, user presence, 
                                group chats, and message history.
                            </p>
                            <div class="mb-3">
                                <span class="badge bg-secondary me-1 mb-1">NestJS</span>
                                <span class="badge bg-secondary me-1 mb-1">Socket.io</span>
                                <span class="badge bg-secondary me-1 mb-1">MongoDB</span>
                                <span class="badge bg-secondary me-1 mb-1">JWT</span>
                            </div>
                            <div class="d-flex gap-2">
                                <button class="btn btn-primary btn-sm flex-fill" 
                                        onclick="showProjectDetails('Real-time Chat System', 'A scalable real-time messaging system with WebSocket support, user presence, group chats, and message history.', 'NestJS, Socket.io, MongoDB, JWT')">
                                    <i class="fas fa-eye me-1"></i>View Details
                                </button>
                                <button class="btn btn-outline-primary btn-sm" title="GitHub Repository">
                                    <i class="fab fa-github"></i>
                                </button>
                                <button class="btn btn-outline-success btn-sm" title="Live Demo">
                                    <i class="fas fa-external-link-alt"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6 mb-4 project-item" data-categories="nestjs api postgresql">
                    <div class="card h-100 border-0 shadow-sm project-card">
                        <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center" 
                             style="height: 200px; background: linear-gradient(135deg, #fd7e14 0%, #e83e8c 100%);">
                            <i class="fas fa-tasks text-white" style="font-size: 3rem;"></i>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-3">Task Management API</h5>
                            <p class="card-text flex-grow-1">
                                A robust task management system with role-based access control, 
                                project organization, and team collaboration features.
                            </p>
                            <div class="mb-3">
                                <span class="badge bg-secondary me-1 mb-1">NestJS</span>
                                <span class="badge bg-secondary me-1 mb-1">TypeORM</span>
                                <span class="badge bg-secondary me-1 mb-1">PostgreSQL</span>
                                <span class="badge bg-secondary me-1 mb-1">JWT</span>
                            </div>
                            <div class="d-flex gap-2">
                                <button class="btn btn-primary btn-sm flex-fill" 
                                        onclick="showProjectDetails('Task Management API', 'A robust task management system with role-based access control, project organization, and team collaboration features.', 'NestJS, TypeORM, PostgreSQL, JWT')">
                                    <i class="fas fa-eye me-1"></i>View Details
                                </button>
                                <button class="btn btn-outline-primary btn-sm" title="GitHub Repository">
                                    <i class="fab fa-github"></i>
                                </button>
                                <button class="btn btn-outline-success btn-sm" title="Live Demo">
                                    <i class="fas fa-external-link-alt"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
        
        <!-- Empty State -->
        <div id="no-projects" class="text-center py-5 d-none">
            <i class="fas fa-search text-muted mb-3" style="font-size: 3rem;"></i>
            <h4 class="text-muted">No projects found</h4>
            <p class="text-muted">Try adjusting the filter or check back later for new projects.</p>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-5 bg-light">
    <div class="container text-center">
        <h2 class="mb-4">Interested in Working Together?</h